<!DOCTYPE html>
<html lang = "en-US">
    <head>
        <meta charset = "UTF-8">
            <title>task2-1</title>
            </head>
    <body onload = "getcolor()" >
        <h1></h1>
        <button onclick="getcolor()">click me</button>
        <script>
            function getcolor(){
                
                var xhttp = new XMLHttpRequest();
                
                xhttp.onreadystatechange = function(){
                    if(this.readyState == 4 && this.status == 200){
                        document.getElementsByTagName("H1")[0].style.color=this.responseText;
                        document.getElementsByTagName("H1")[0].innerHTML=this.responseText;
                    }
                };
                xhttp.open("GET","/colour.txt",true);
                xhttp.send();
                
            }
        
            </script>
    </body>
</html>


